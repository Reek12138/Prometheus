<launch>
	<arg name="uav_id" default="1"/>
    <arg name="sim_mode" default="true"/>
    <arg name="init_px4_mode" default="0"/>
    <arg name="only_command_mode" default="false"/>
    <arg name="flag_printf" default="true"/>

    <!-- 启动Prometheus代码, run the uav_control_node.cpp
    包括了uav_estimator.cpp和uav_controller.cpp
     -->
	<node pkg="prometheus_uav_control" type="uav_control_main" name="uav_control_main_$(arg uav_id)" output="screen">
		<param name="uav_id" value="$(arg uav_id)" />
        <param name="sim_mode" value="$(arg sim_mode)" />
        <param name="init_px4_mode" value="$(arg init_px4_mode)" />
        <param name="only_command_mode" value="$(arg only_command_mode)" />
		<param name="flag_printf" value="$(arg flag_printf)" />
		<rosparam command="load" file="$(find prometheus_uav_control)/launch/uav_control_outdoor.yaml" />
	</node>

    <!-- 启动虚拟摇杆驱动 -->
    <node pkg="prometheus_uav_control" type="joy_node" name="joy_node" output="screen">
	</node>
</launch>

