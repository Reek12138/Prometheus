<?xml version="1.0"?>
<launch>

  <!-- Run the map server -->
  <arg name="map_file" default="$(find xsugv_navigation)/maps/floor2_map.yaml"/>
  <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)" />
  <arg name="scan_topic" default="$(eval optenv('XSUGV_LASER_TOPIC', 'scan'))" />

  <!--- Run AMCL -->
  <include file="$(find xsugv_navigation)/launch/amcl.launch">
    <arg name="scan_topic" value="$(arg scan_topic)" />
    <param name="force_update_after_set_map" value="true" />
    <param name="force_update_after_initialpose" value="true" />
  </include>

  <!--- Run Move Base -->
  <include file="$(find xsugv_navigation)/launch/move_base.launch" />

</launch>
